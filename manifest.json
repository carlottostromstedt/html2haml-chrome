{
  "manifest_version": 3,
  "name": "Convert HTML to Haml",
  "version": "1.0",
  "description": "Convert HTML to Haml without needing a new tab.",
  "browser_specific_settings": {
    "gecko": {
      "id": "convert_html_to_haml@example.com"
    }
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
  ],
  "background": {
    "service_worker": "background.js"
  }
}